{{#if addNewCity}}
<h1>New City</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="cityName">Name</label>
          {{input value=name id="cityName"}}
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          {{input value=country id="country"}}
        </div>

        <button {{action 'saveCity'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
